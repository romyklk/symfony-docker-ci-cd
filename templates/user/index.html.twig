{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
<div class="actions-bar">
    <h1>👥 Gestion des utilisateurs</h1>
    <a href="{{ path('app_user_new') }}" class="btn btn-primary">
        ➕ Nouvel utilisateur
    </a>
</div>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Rôles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% for role in user.roles %}
                    <span class="badge">{{ role }}</span>
                    {% endfor %}
                </td>
                <td>
                    <div class="d-flex gap-2">
                        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-outline btn-sm">
                            👁️ Voir
                        </a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-secondary btn-sm">
                            ✏️ Modifier
                        </a>
                    </div>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4" class="text-center">
                    <p class="text-secondary">Aucun utilisateur trouvé</p>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
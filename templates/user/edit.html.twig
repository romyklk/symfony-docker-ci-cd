{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
<div class="d-flex justify-between align-center mb-4">
    <h1>✏️ Modifier l'utilisateur</h1>
    <a href="{{ path('app_user_index') }}" class="btn btn-outline">← Retour à la liste</a>
</div>

<div class="card">
    <div class="card-header">
        <h2 class="card-title">Informations utilisateur</h2>
    </div>
    <div class="card-body">
        {{ include('user/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
    </div>
</div>

<div class="d-flex justify-between mt-4">
    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-outline">Voir les détails</a>

    <div class="card" style="border-color: var(--danger-color); max-width: 300px;">
        <div class="card-header" style="background-color: #fef2f2; border-color: var(--danger-color);">
            <h3 class="card-title" style="color: var(--danger-color); font-size: 1rem;">⚠️ Supprimer l'utilisateur</h3>
        </div>
        <div class="card-body">
            <p class="text-secondary mb-3" style="font-size: 0.875rem;">Cette action est irréversible.</p>
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
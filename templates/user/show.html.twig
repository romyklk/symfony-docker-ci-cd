{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block body %}
<div class="d-flex justify-between align-center mb-4">
    <h1>👤 Détails de l'utilisateur</h1>
    <div class="d-flex gap-2">
        <a href="{{ path('app_user_index') }}" class="btn btn-outline">← Retour à la liste</a>
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-secondary">✏️ Modifier</a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h2 class="card-title">Informations utilisateur</h2>
    </div>
    <div class="card-body">
        <table class="table">
            <tbody>
                <tr>
                    <th style="width: 150px;">ID</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Rôles</th>
                    <td>
                        {% for role in user.roles %}
                        <span class="badge">{{ role }}</span>
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="card mt-4" style="border-color: var(--danger-color);">
    <div class="card-header" style="background-color: #fef2f2; border-color: var(--danger-color);">
        <h3 class="card-title" style="color: var(--danger-color);">⚠️ Zone de danger</h3>
    </div>
    <div class="card-body">
        <p class="text-secondary mb-3">La suppression de cet utilisateur est irréversible.</p>
        {{ include('user/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
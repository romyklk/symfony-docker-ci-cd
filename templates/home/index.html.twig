{% extends 'base.html.twig' %}

{% block title %}Accueil - Application Symfony{% endblock %}

{% block body %}
<div style="text-align: center; margin-bottom: 40px;">
    <h1>🚀 Bienvenue sur Mon App</h1>
    <p>Une application Symfony moderne</p>
</div>

<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px; margin: 40px 0;">
    <div style="border: 1px solid #ddd; padding: 20px; border-radius: 8px;">
        <div style="font-size: 2rem; text-align: center; margin-bottom: 10px;">🔐</div>
        <h3>Authentification Sécurisée</h3>
        <p>Système d'authentification robuste avec inscription et connexion</p>
        {% if not app.user %}
        <div style="margin-top: 15px;">
            <a href="{{ path('app_login') }}"
                style="display: inline-block; background: #007bff; color: white; padding: 8px 16px; text-decoration: none; border-radius: 4px; margin-right: 10px;">Se
                connecter</a>
            <a href="{{ path('app_register') }}"
                style="display: inline-block; border: 1px solid #007bff; color: #007bff; padding: 8px 16px; text-decoration: none; border-radius: 4px;">S'inscrire</a>
        </div>
        {% endif %}
    </div>

    <div style="border: 1px solid #ddd; padding: 20px; border-radius: 8px;">
        <div style="font-size: 2rem; text-align: center; margin-bottom: 10px;">👥</div>
        <h3>Gestion d'Utilisateurs</h3>
        <p>Interface complète pour administrer les utilisateurs</p>
        {% if app.user %}
        <div style="margin-top: 15px;">
            <a href="{{ path('app_user_index') }}"
                style="display: inline-block; background: #007bff; color: white; padding: 8px 16px; text-decoration: none; border-radius: 4px;">Gérer
                les utilisateurs</a>
        </div>
        {% else %}
        <div style="margin-top: 15px;">
            <span
                style="background: #6c757d; color: white; padding: 4px 8px; border-radius: 4px; font-size: 0.875rem;">Connexion
                requise</span>
        </div>
        {% endif %}
    </div>

    <div style="border: 1px solid #ddd; padding: 20px; border-radius: 8px;">
        <div style="font-size: 2rem; text-align: center; margin-bottom: 10px;">⚡</div>
        <h3>Performance Optimisée</h3>
        <p>Application haute performance avec cache intégré</p>
        <div style="margin-top: 15px;">
            <span
                style="background: #28a745; color: white; padding: 4px 8px; border-radius: 4px; font-size: 0.875rem;">✅
                Actif</span>
        </div>
    </div>
</div>

{% if app.user %}
<div style="background: #f8f9fa; padding: 20px; border-radius: 8px; margin-top: 40px;">
    <div style="display: flex; align-items: center; gap: 15px;">
        <div
            style="width: 50px; height: 50px; background: #007bff; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 1.25rem;">
            {{ app.user.email|first|upper }}
        </div>
        <div>
            <h4 style="margin: 0;">Bienvenue, {{ app.user.email|split('@')|first|title }} !</h4>
            <p style="margin: 5px 0 0 0; color: #6c757d;">Connecté en tant que {{ app.user.email }}</p>
        </div>
        <div style="margin-left: auto;">
            <a href="{{ path('app_logout') }}" style="color: #dc3545; text-decoration: none;">Déconnexion</a>
        </div>
    </div>
</div>
{% endif %}

<div style="text-align: center; margin-top: 60px; padding-top: 40px; border-top: 1px solid #eee;">
    <h2>🛠️ Fonctionnalités Disponibles</h2>
    <div
        style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-top: 30px;">
        <div>
            <div style="font-size: 1.5rem; margin-bottom: 10px;">📋</div>
            <h4>CRUD Complet</h4>
            <p style="font-size: 0.9rem; color: #666;">Créer, lire, modifier, supprimer</p>
        </div>
        <div>
            <div style="font-size: 1.5rem; margin-bottom: 10px;">🔒</div>
            <h4>Sécurité</h4>
            <p style="font-size: 0.9rem; color: #666;">Protection CSRF, validation</p>
        </div>
        <div>
            <div style="font-size: 1.5rem; margin-bottom: 10px;">📱</div>
            <h4>Responsive</h4>
            <p style="font-size: 0.9rem; color: #666;">Compatible mobile et tablette</p>
        </div>
        <div>
            <div style="font-size: 1.5rem; margin-bottom: 10px;">🚀</div>
            <h4>Moderne</h4>
            <p style="font-size: 0.9rem; color: #666;">Symfony 7, PHP 8+</p>
        </div>
    </div>
</div>
{% endblock %}